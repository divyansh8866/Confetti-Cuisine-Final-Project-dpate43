<h1 class="center">Course Data for
  <%= curVacation.title %>
</h1>
<img src="<%= `/images/${curVacation.heroImage}` %>" alt="French.jpg" style="width: 25vw; min-width: 200px; margin: 10px">
<table class="table">
  <tr>
    <th>Title</th>
    <td>
      <%= curVacation.title %>
    </td>
</tr>
<tr>
    <th>Description</th>
    <td>
      <%= curVacation.description %>
    </td>
</tr>
<tr>
    <th>Max Travelers</th>
    <td>
      <%= curVacation.maxTravelers %>
    </td>
</tr>
<tr>
    <th>Cost</th>
    <td>$
      <%= curVacation.cost %>
    </td>
</tr>
<tr>
    <th>Cuisine</th>
    <td>
      <%= curVacation.cuisine %>
    </td>
</tr>
<tr>
    <th>Hero image</th>
    <td>
      <%= curVacation.heroImage %>
    </td>
</tr>
<tr>
    <th>Destination</th>
    <td>
      <%= curVacation.destination %>
    </td>
</tr>
<tr>
    <th>Departure Location</th>
    <td>
      <%= curVacation.departureLocation %>
    </td>
</tr>
<tr>
    <th>Departure Date</th>
    <td>
      <%= curVacation.departureDate %>
    </td>
</tr>
<tr>
    <th>Return Date</th>
    <td>
      <%= curVacation.returnDate %>
    </td>
</tr>
</table>


<div>
  <a class="button" href="<%=`/vacations/${curVacation._id}/edit`%>">
    Edit Course Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/vacations/${curVacation._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
</div>
<div>
  <a class="button" href="/vacations">View all courses</a>
</div>
