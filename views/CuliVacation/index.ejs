<h2 class="center">Packages Table</h2>
<div class="center">
  <a class="button" href="/vacations/new">Create New Packages</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% packages.forEach(course => { %>
    <tr>
      <td>
        <a href="<%= `/vacations/${course._id}` %>">
          <%= course.title %>
        </a>
      </td>
      <td>
        <%= course.description %>
      </td>
      <td>
        <a href="<%=`vacations/${course._id}/edit`%>">
          Edit
        </a>
      </td>
      <td>
        <a href="<%= `vacations/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
